<h2>Book detail</h2>

<div class="row">
  <table class="table">
    <tbody>
      <tr>
        <th>
          <div>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'30x30' %>
              <p><%= @book.user.name %></p>
            <% end %>
          </div>
        </th>
        <th><%= @book.title %></th>
        <th><%= @book.body %></th>
        <% if @book.user == current_user %>
          <th><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success' %></th>
          <th><%= link_to 'Destroy', book_path(@book),  class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "削除しますか？"} %></th>
        <% end %>
        <th>
          <%= "コメント件数: #{@book.book_comments.count}" %>
        </th>
      </tr>

      <table>
        <tr>
          <th>
            <div class="comment-index">
              <% @book.book_comments.each do |book_comment| %>
              <%= book_comment.user.name %>
              <%= book_comment.created_at.strftime('%Y/%m/%d') %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
              <th><%= link_to 'Destroy', book_book_comment_path(book_comment.id),  class: 'btn btn-sm btn-danger', method: :delete %></th>
              <% end %>
              <% end %>
            </div>
          </th>
        </tr>
      </table>

      <table>
        <tr>
          <%= form_with(model:[@book,@book_comment], local: true) do |f| %>
          <%= f.text_area :comment, row:'5', class: "form-control" %>
          <%= f.submit "送信" %>
          <% end %>
        </tr>
      </table>
    </tbody>
  </table>
</div>